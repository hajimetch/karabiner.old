{
    "title": "IME in macOS",
    "rules": [
        {
            "description": "Control-\\でIMEを切り替える",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "backslash",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "grave_accent_and_tilde",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^org\\.gnu\\.Emacs$",
                                "^org\\.gnu\\.AquamacsEmacs$",
                                "^org\\.gnu\\.Aquamacs$",
                                "^com\\.parallels\\.desktop$",
                                "^com\\.parallels\\.vm$",
                                "^com\\.parallels\\.desktop\\.console$",
                                "^com\\.parallels\\.winapp\\."
                            ],
                            "type": "frontmost_application_unless"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Control+`でLEIMを切り替える",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "grave_accent_and_tilde",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "backslash",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^org\\.gnu\\.Emacs$",
                                "^org\\.gnu\\.AquamacsEmacs$",
                                "^org\\.gnu\\.Aquamacs$"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "左右ShiftでIMEを切り替える",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "semicolon",
                            "modifiers": [
                                "left_control",
                                "left_shift"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^org\\.gnu\\.Emacs$",
                                "^org\\.gnu\\.AquamacsEmacs$",
                                "^org\\.gnu\\.Aquamacs$",
                                "^com\\.parallels\\.desktop$",
                                "^com\\.parallels\\.vm$",
                                "^com\\.parallels\\.desktop\\.console$",
                                "^com\\.parallels\\.winapp\\."
                            ],
                            "type": "frontmost_application_unless"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "j",
                            "modifiers": [
                                "left_control",
                                "left_shift"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^org\\.gnu\\.Emacs$",
                                "^org\\.gnu\\.AquamacsEmacs$",
                                "^org\\.gnu\\.Aquamacs$",
                                "^com\\.parallels\\.desktop$",
                                "^com\\.parallels\\.vm$",
                                "^com\\.parallels\\.desktop\\.console$",
                                "^com\\.parallels\\.winapp\\."
                            ],
                            "type": "frontmost_application_unless"
                        }
                    ]
                }
            ]
        }
    ]
}
