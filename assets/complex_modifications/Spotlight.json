{
  "title": "Spotlight",
  "rules": [
    {
      "description": "Spotlight検索時に英数モードにする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["command"]
            },
            {
              "key_code": "japanese_eisuu"
            }
          ]
        }
      ]
    }
  ]
}
